<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.fhtw.swen2.tutorial.presentation.view.CUDController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>
        <HBox>
            <children>

                <Label text="%tab.tours.title">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>

                <Button fx:id="createButton" onAction="#onCreateHandle" prefHeight="25.0" prefWidth="49.0"
                        text="+"/>

                <Button fx:id="deleteButton" onAction="#onDeleteHandle" prefHeight="25.0" prefWidth="49.0"
                        text="-"/>
                <Button fx:id="updateButton" onAction="#onUpdateHandle" prefHeight="25.0" prefWidth="49.0"
                        text="*"/>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </HBox>
        <Separator prefWidth="200.0"/>
    </VBox>

</AnchorPane>
